{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Development)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--flavor", "dev"
            ],
            "env": {
                "FLUTTER_ENV": "development"
            },
            "toolArgs": [
                "--dart-define-from-file=.env"
            ]
        },
        {
            "name": "Debug (Production)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--flavor", "prod"
            ],
            "env": {
                "FLUTTER_ENV": "production"
            },
            "toolArgs": [
                "--dart-define-from-file=.env.prod"
            ]
        },
        {
            "name": "Profile (Development)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "profile",
            "args": [
                "--flavor", "dev"
            ],
            "toolArgs": [
                "--dart-define-from-file=.env"
            ]
        },
        {
            "name": "Release (Production)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "release",
            "args": [
                "--flavor", "prod"
            ],
            "toolArgs": [
                "--dart-define-from-file=.env.prod"
            ]
        }
    ]
}
